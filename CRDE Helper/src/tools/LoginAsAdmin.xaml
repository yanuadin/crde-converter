<UserControl x:Class="CRDEConverterJsonExcel.src.tools.LoginAsAdmin"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CRDEConverterJsonExcel.src.tools"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Admin Login" FontSize="20" HorizontalAlignment="Center" Margin="0,0,0,20"/>
            <PasswordBox x:Name="pb_password" materialDesign:HintAssist.Hint="Password" materialDesign:TextFieldAssist.HasClearButton="True" Style="{StaticResource MaterialDesignRevealPasswordBox}" Margin="0,20,0,0"/>
            <Button x:Name="t8_btn_Login" Content="Login" HorizontalAlignment="Left" Click="t8_btn_Login_Click" Height="30" Margin="0,20,0,0"/>
            <Button x:Name="t8_btn_Logout" Content="Logout" HorizontalAlignment="Center" Click="t8_btn_Logout_Click" Height="30" Margin="0,-150,0,0" Visibility="Hidden"/>
        </StackPanel>
    </Grid>
</UserControl>
